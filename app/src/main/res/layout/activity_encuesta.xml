<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abc_vector_test"
    tools:context=".Encuesta">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_marginBottom="169dp"
        app:srcCompat="@mipmap/u" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etCentro"
        android:layout_centerInParent="true"
        android:text=" ¿Por qué eligió este centro educativo? "
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCentro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/textView2"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cbTenis"
        android:layout_centerInParent="true"
        android:text=" ¿Qué deportes practica? "
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/cbTenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cbbox"
        android:layout_centerInParent="true"
        android:text="Futbol" />

    <CheckBox
        android:id="@+id/cbbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ckbBaloncesto"
        android:layout_centerInParent="true"
        android:text="Box" />

    <CheckBox
        android:id="@+id/ckbBaloncesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_centerInParent="true"
        android:text="Natacion" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RadioGruop"
        android:layout_centerInParent="true"
        android:text=" ¿Está interesado en aprender otro idioma aparte de inglés.? "
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/RadioGruop"
        android:layout_width="96dp"
        android:layout_height="114dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/btnEnviarEncuesta">

        <RadioButton
            android:id="@+id/rbSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SI" />

        <RadioButton
            android:id="@+id/rbNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NO" />
    </RadioGroup>

    <Button
        android:id="@+id/btnEnviarEncuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="EnviarEncuesta"
        android:text="ENVIAR" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="176dp"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</RelativeLayout>